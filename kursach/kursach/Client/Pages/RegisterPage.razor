@page "/register"
<Separator Title="Регистрация" />

<div class="container-fluid p-0 d-flex flex-row justify-content-center align-items-center">
    <div class="d-flex flex-column align-items-center" style="width:50%;">
        <form style="width:300px;">
            <span>Имя</span>
            <input placeholder="Иван" class="login-input" />
            <span>Фамилия</span>
            <input placeholder="Иванов" class="login-input" />
            <span>Дата рождения</span>
            <input type="date" class="login-input" />
            <span>Никнейм</span>
            <input placeholder="IvanIvanov" class="login-input" />
            <span>Пароль</span>
            <input type="password" class="login-input" />
            <span>Повторите пароль</span>
            <input type="password" class="login-input" />
            <span>Почта</span>
            <input type="email" class="login-input" />
            <span>Номер телефона</span>
            <input placeholder="+7xxxxxxxxxx" type="tel" pattern="+7([0-9]{3})[0-9]{3}-[0-9]{2}-[0-9]{2}" class="login-input" />
            <NavLink href="/account"><button class="btn suppler-button" style="width:100%;">Зарегистрироваться</button></NavLink>
        </form>
    </div>
</div>

